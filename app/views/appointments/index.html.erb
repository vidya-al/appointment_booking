<p id="notice"><%= notice %></p>

<h1>Book an Appointment</h1>

<table>
  <thead>
    <tr>
      <th>Appointment day</th>
      <th>Time slot</th>
      <th>Confirm booking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_day %></td>
        <td><%= appointment.time_slot %></td>
        <td><%= appointment.confirm_booking %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
